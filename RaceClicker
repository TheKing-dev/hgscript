local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "HGA script | Race Clicker", HidePremium = false, SaveConfig = true, ConfigFolder = "HGA", IntroEnabled = true, IntroText = "Ho≈ügeldin dostum!"})



--[tabs]--
local farmTab = Window:MakeTab({
	Name = "oto farm",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local otomatikTab = Window:MakeTab({
	Name = "Otomatik",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

--[Values]--

_G.ototiklama = true
_G.otohediyetoplama = true

--[Functions]--

function ototiklama()
    while _G.ototiklama == true do
    game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("ClickService"):WaitForChild("RF"):WaitForChild("Click"):InvokeServer()
    end
end

function otohediyetoplama()
    while _G.otohediyetoplama == true do
        local args = {[1] = 1}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
        wait(0.1)
		local args = {[1] = 2}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
		local args = {[1] = 3}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
		local args = {[1] = 4}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
		local args = {[1] = 5}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
		local args = {[1] = 6}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
		local args = {[1] = 7}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
		local args = {[1] = 8}
        game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PlaytimeGiftsService"):WaitForChild("RF"):WaitForChild("Claim"):InvokeServer(unpack(args))
		wait(0.1)
    end
end

--[Togles]--

farmTab:AddToggle({
	Name = "Oto Tiklama",
	Default = false,
	Callback = function(Value)
		_G.ototiklama = Value
        ototiklama()
	end
})

otomatikTab:AddToggle({
	Name = "Oto Hediye Toplama",
	Default = false,
	Callback = function(Value)
		_G.otohediyetoplama = Value
        otohediyetoplama
	end
})
OrionLib:Init()
